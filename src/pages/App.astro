---
import Input from '../App/Input/Input'
import Header from "../components/Header/Header";
import Layout from "../layouts/Layout.astro";


---

<style is:raw>
    main{
        width: 82%;
        padding-block: 40px;
    }
    .btn-back{
        width: max-content;
        text-decoration: none;
    }
    .btn-back span{
        height: 36px;
        width: 36px;
    }
</style>

<Layout title="PromedyCalculator | App">
    <Header app={true}/>
    <main class="mx-auto">
        <a href="/" class="btn-back f-row f-align-center">
            <span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#000">
